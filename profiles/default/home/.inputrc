set completion-ignore-case on
set completion-map-case on
set mark-symlinked-directories on
set input-meta on
set output-meta on
set convert-meta off
set enable-bracketed-paste off

# make the "delete" key work rather than just entering a ~
"\e[3~": delete-char

# make ctrl+left/right arrow keys jump the cursor over words
"\e[5C": forward-word
"\e[5D": backward-word

# make up/down complete commands from history
"\e[5~": history-search-backward
"\e[6~": history-search-forward

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word
